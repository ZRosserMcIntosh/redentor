generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  client
  partner
  employee
}

model User {
  id           String           @id @default(uuid())
  fullName     String
  email        String           @unique
  passwordHash String
  role         Role
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  permissions  UserPermission[] // relation to permission join table
}

model Permission {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?
  users       UserPermission[]  // relation to user join table
}

model UserPermission {
  userId       String
  permissionId Int
